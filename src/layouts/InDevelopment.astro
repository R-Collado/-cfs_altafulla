---
import LanguageSelector from '../components/LanguageSelector.astro';
import Noise from '../components/Noise.astro';
import CfsAltafullaLogo from '../assets/logo.png';

interface Props {
    title: string;
    header: string;
    message: string;
}

const { title, header, message} = Astro.props;

---

<html>
    <head>
        <title>{title}</title>
        <style>
            .logo {
                top: 10%;
                left: 50%;
                transform: translateX(-50%);
                position: fixed;
                margin: 0 auto;
                width: 5rem;
                aspect-ratio: 1;
            }

            .wrapper {
                position: relative;
                background: #E3DFE5;
                width: 100vw;
                height: 100vh;
                display: grid;
                place-content: center;
                text-align: center;
            }

            .message {
                max-width: 40ch;
                margin: 0 auto;
                font-size: 1.25rem;
                margin-block: 1rem;
            }

            .email {
                border: none;
                background: none;
                cursor: pointer;
                text-decoration: underline;
                font-size: 1.25rem;
                margin-top: 2rem;
                margin-bottom: 1rem;
                color: black;
            }

            .selector-wrapper {
                margin: 0 auto;
            }

            @keyframes socialButtonPulse {
                0% {
                    transform: translate3d(-50%, -50%, 0) scale(0.7);
                    opacity: 1;
                }

                30% {
                    transform: translate3d(-50%, -50%, 0) scale(1.1);
                    opacity: .5;
                }

                100% {
                    transform: translate3d(-50%, -50%, 0) scale(1.1);
                    opacity: 0;
                }
            }
        </style>
    </head>
    <body>
        <div class="wrapper">
            <Noise />
            <img class="logo" src={CfsAltafullaLogo.src} alt="Escudo CFS Altafulla" />
            <h1 class="heading">{header}</h1>
            <p class="message">{message}</p>
            <div class="selector-wrapper">
                <LanguageSelector />
            </div>
            <slot />
        </div>
       
    </body>
    
</html>




