---
import LanguageSelector from '../components/LanguageSelector.astro';
import Noise from '../components/Noise.astro';
import CfsAltafullaLogo from '../assets/logo.png';
import { getLangFromUrl, useTranslations } from '../i18n/utils';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<!doctype html>
<html>
    <head lang={lang}>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <title>{t('inDev.title')}</title>
        <style is:global>
            :root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: #13151a; */
		
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

    .logo {
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        position: fixed;
        margin: 0 auto;
        width: 5rem;
        aspect-ratio: 1;
    }

    .wrapper {
        position: relative;
        background: #E3DFE5;
        width: 100vw;
        height: 100vh;
        display: grid;
        place-content: center;
        text-align: center;
    }

    .message {
        max-width: 40ch;
        margin: 0 auto;
        font-size: 1.25rem;
        margin-block: 1rem;
    }

    .email {
        border: none;
        background: none;
        cursor: pointer;
        text-decoration: underline;
        font-size: 1.25rem;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: black;
    }

    .selector-wrapper {
        margin: 0 auto;
    }

    @keyframes socialButtonPulse {
        0% {
            transform: translate3d(-50%, -50%, 0) scale(0.7);
            opacity: 1;
        }

        30% {
            transform: translate3d(-50%, -50%, 0) scale(1.1);
            opacity: .5;
        }

        100% {
            transform: translate3d(-50%, -50%, 0) scale(1.1);
            opacity: 0;
        }
    }
    </style>
    </head>
    <body>
        <div class="wrapper">
            <Noise />
            <img class="logo" src={CfsAltafullaLogo.src} alt="Escudo CFS Altafulla" />
            <h1 class="heading">{t("inDev.header")}</h1>
            <p class="message">{t('inDev.message')}</p>
            <div class="selector-wrapper">
                <LanguageSelector actualComponent=''/>
            </div>
            <slot />
        </div>
       
    </body>
    
</html>




