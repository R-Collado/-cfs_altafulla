---
import { getRelativeLocaleUrl } from "astro/virtual-modules/i18n.js";

import SpanishFlag from "../assets/spanish-flag.png";
import CatalanFlag from "../assets/catalan-flag.png";
import EnglishFlag from "../assets/english-flag.png";

interface Props {
	actualComponent: string;
}

const {actualComponent} = Astro.props;

const spanish = getRelativeLocaleUrl("es", actualComponent);
const catalan = getRelativeLocaleUrl("ca", actualComponent);
const english = getRelativeLocaleUrl("en", actualComponent);

---

<ul class="language-list">
	<li>
		<a href={spanish}>
			<img src={SpanishFlag.src} alt="Bandera de EspaÃ±a" />
			ES
		</a>
	</li>
	<li>
		<a href={catalan}>
			<img src={CatalanFlag.src} alt="Bandera de Catalunya" />
			CA
		</a>
	</li>
	<li>
		<a href={english}>
			<img src={EnglishFlag.src} alt="Bandera de Reino Unido" />
			EN
		</a>
	</li>
</ul>


<style>
	a,
	a:visited {
		color: black;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	.language-list {
		display: flex;
		gap: 2rem;
		list-style: none;
	}

</style>