---
import { Icon } from 'astro-icon/components';
---

<ul class="socials">
    <li class="social">
        <a
            href="https://www.instagram.com/cfaltafulla/"
            target="_blank"
            rel="noopener noreferrer">
            <Icon name="instagram" height={24} width={24} />
        </a>
    </li>
    <li class="social">
        <a
            href="https://www.tiktok.com/@cfsaltafulla"
            target="_blank"
            rel="noopener noreferrer">
                <Icon name="tiktok" height={32} width={32} />
        </a>
    </li>
    <li class="social">
        <a
            href="mailto:info@cfsaltafulla.com">
            <Icon name="email" height={28} width={28}/>
        </a>
    </li>
</ul>


<style>
    .socials {
        display: flex;
        list-style: none;
        margin: 0 auto;
        gap: 1rem;
    }

    .socials li {
        cursor: pointer;
        position: relative;
    }

    .socials li a {
        color: white;
        z-index: 2;
        background: black;
        border-radius: 50%;
        width: 4rem;
        aspect-ratio: 1;
        display: grid;
        place-content: center;
    }

    .socials li a::before {
        content: '';
        position: absolute;
        z-index: 1;
        top: 50%;
        left: 50%;
        border: 2px solid black;
        height: 100%;
        width: 100%;
        border-radius: 50%;
        transform: translate3d(-50%, -50%, 0) scale(.9);    
    }

    .socials li a:hover::before {
        animation: socialButtonPulse 1s linear;
    }
</style>